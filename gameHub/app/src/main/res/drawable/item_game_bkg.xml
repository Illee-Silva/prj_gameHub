<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient stroke layer -->
    <item>
        <shape>
            <corners android:radius="8dp"/>
            <gradient
                android:startColor="#000623"
                android:endColor="#000000"
                android:angle="270"/>
        </shape>
    </item>
    <!-- Inner background gradient with padding to reveal the stroke -->
    <item android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp">
        <shape>
            <corners android:radius="4dp"/>
            <gradient
                android:startColor="#2F2F2F"
                android:endColor="#000000"
                android:angle="270"/>
        </shape>
    </item>
</layer-list>